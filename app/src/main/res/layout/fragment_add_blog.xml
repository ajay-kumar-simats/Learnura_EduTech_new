<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBlogFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Add Blog"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/blog_title_editText"
            android:layout_width="338dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_back_2"
            android:drawableStart="@drawable/ic_book"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Blog Title"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textView48"
            app:layout_constraintStart_toStartOf="@+id/textView48"
            app:layout_constraintTop_toBottomOf="@+id/textView48" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="338dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text_back_2"
            android:drawableStart="@drawable/ic_project"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Blog Detail"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textView48"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/textView48"
            app:layout_constraintTop_toBottomOf="@+id/blog_title_editText" />


        <EditText
            android:id="@+id/editText6"
            android:layout_width="338dp"
            android:layout_height="52dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edit_text_back_2"
            android:drawableStart="@drawable/ic_project"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Blog Link"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/editText5"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/editText5"
            app:layout_constraintTop_toBottomOf="@+id/editText5" />

        <EditText
            android:id="@+id/cardView_choose_image"
            android:layout_width="341dp"
            android:layout_height="225dp"
            android:layout_marginTop="192dp"
            android:background="@drawable/edit_text_back_2"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Blog Description"
            android:inputType="text"
            android:maxLines="8"
            android:minLines="1"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/editText6"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/editText6"
            app:layout_constraintTop_toBottomOf="@+id/blog_title_editText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update_blog_button"
            android:layout_width="300dp"
            android:layout_height="49dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_profile_btn_back"
            android:backgroundTint="#12E673"
            android:text="Update Blog"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_choose_image"
            app:layout_constraintVertical_bias="0.355" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>