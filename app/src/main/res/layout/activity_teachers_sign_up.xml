<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeachersSignUpActivity">

    <View
        android:id="@+id/ellipse_4"
        android:layout_width="496dp"
        android:layout_height="605dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="356dp"
        android:background="@drawable/circle_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="TUTOR SIGN UP"
                android:textColor="#813FF1"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/teacher_mail"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="@+id/teacher_mail"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/teacher_mail"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginTop="84dp"
                android:background="@drawable/edit_text_back"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="text|textEmailAddress"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.695"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/teacher_pass_edit_text"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_back"
                android:drawableLeft="@drawable/ic_lock"
                android:drawableRight="@drawable/pass_eye_close"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.695"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teacher_mail" />

            <Button
                android:id="@+id/teachers_sign_up_btn"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#813FF1"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Sign Up"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/teacher_pass_edit_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/teacher_pass_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/teacher_pass_confirm_edit_text" />

            <TextView
                android:id="@+id/teachers_login_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rem_semibold"
                android:text="Already have an account? Login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/teachers_sign_up_btn"
                app:layout_constraintHorizontal_bias="0.415"
                app:layout_constraintStart_toStartOf="@+id/teachers_sign_up_btn"
                app:layout_constraintTop_toBottomOf="@+id/teachers_sign_up_btn"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/teacher_username"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edit_text_back"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/teacher_pass_confirm_edit_text"
                android:layout_width="264dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_back"
                android:drawableLeft="@drawable/ic_lock"
                android:drawableRight="@drawable/pass_eye_close"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="@+id/teacher_pass_edit_text"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="@+id/teacher_pass_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/teacher_pass_edit_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView29"
        android:layout_width="273dp"
        android:layout_height="225dp"
        android:src="@drawable/teacher_sign_up_image"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundingImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>



